<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageButton
            android:id="@+id/common_item_button"
            android:layout_width="@dimen/course_width"
            android:layout_height="@dimen/course_height"
            android:background="@drawable/selector_button"
            android:src="@drawable/course"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/common_item_title_0"
            android:layout_width="@dimen/course_width"
            android:layout_height="40dp"
            android:singleLine="true"
            android:text="数据结构基础"
            android:background="@drawable/card_bottom"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="@dimen/course_text_size"/>

</LinearLayout>