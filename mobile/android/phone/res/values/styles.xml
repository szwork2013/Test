<resources>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置无标题 -->
        <item name="android:windowBackground">@color/sc_transparent_background</item>
        <!-- 设置完全透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置屏幕变暗 -->
    </style>
    <style name="D6_Font">
        <item name="android:textSize">13.0sp</item>
        <item name="android:textColor">#ff727475</item>
        <item name="android:shadowColor">#ccffffff</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A1_Font">
        <item name="android:textSize">19.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A2_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A3_Font">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A4_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A5_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="A6_Font">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/semi_transparent</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>

    <style name="A7_Font">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="A8_Font">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ff0e0e0e</item>
        <item name="android:shadowColor">#88ffffff</item>
        <item name="android:shadowRadius">5.0</item>
    </style>

    <style name="UMengDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!-- custom progressbar size -->
    <style name="CustomProgressStyle" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">38dip</item>
        <item name="android:maxWidth">38dip</item>
        <item name="android:minHeight">38dip</item>
        <item name="android:maxHeight">38dip</item>
    </style>
    <style name="radioButtonStyle">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">3dip</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">@color/back_press_true</item>
    </style>
    <style name="radioImageViewStyle">
        <item name="android:button">@null</item>
        <item name="android:text">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- toggle style -->
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_bg</item>
        <item name="android:textOn">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <style name="ToggleStyle" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- 告诉Android当创建ToggleButton的时候使用自定义风格 -->
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <!-- 在这里可以添加更多的选项... -->
    </style>


    <style name="app_pop">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>

    <style name="history_pop">
        <item name="android:windowEnterAnimation">@anim/pop_down</item>
        <item name="android:windowExitAnimation">@anim/pop_up</item>
    </style>
    <style name="Theme.ActivityAniZoomOut" parent="@android:style/Animation.Activity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@style/AniZoomOut</item>
    </style>

    <style name="AniZoomOut" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/zoom_out</item>
    </style>
    <style name="Theme.ActivityLeftInRightOut" parent="@android:style/Animation.Activity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AnimPushLeftInRightOut</item>
    </style>

    <style name="AnimPushLeftInRightOut" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/left_in</item>
        <item name="android:windowExitAnimation">@anim/right_out</item>
    </style>

    <!-- constom ratingbar-->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/myratingbar_yellow</item>
        <item name="android:minHeight">11dip</item>
        <item name="android:maxHeight">11dip</item>
    </style>

    <!-- login and regist UI-->
    <style name="loginEditor">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">#999999</item>
    </style>

    <!-- cold page -->
    <style name="noData">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/text_color_no_data</item>
        <item name="android:textSize">19sp</item>
    </style>

</resources>
