<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >
    <View
            android:id="@+id/appraise_outside_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#00000000"
            />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
        <TextView
                android:id="@+id/look_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="查看评价"
                android:gravity="center"
                android:textColor="@color/content_list"
                android:textSize="20sp"
                />
        <View
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/line"
                android:layout_below="@id/look_remark"
                android:layout_width="match_parent"
              android:layout_height="0.8dp"
              android:background="#d4d7dc"
                />
        <ListView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/appraise_list"
                android:layout_below="@id/line"
                android:layout_marginBottom="14dp"
                android:cacheColorHint="@color/course_bg_color"
                android:divider="#d4d7dc"
                android:dividerHeight="0.8dp"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:layout_height="wrap_content"/>

        <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/line"
                layout="@layout/loading_layout"/>
        <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/line"
                android:visibility="gone"
                layout="@layout/loading_fial_layout"/>
    </RelativeLayout>
</LinearLayout>