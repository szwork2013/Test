<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/item_line"
            />
    <LinearLayout
            android:id="@+id/rel_download_group"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_weight="1"
                android:id="@+id/ll_download_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingTop="18.42dp"
                android:paddingBottom="18.42dp">
            <ImageView
                    android:id="@+id/load_check_group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="14dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:src="@drawable/download_circle"/>
            <TextView
                    android:id="@+id/load_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="14dp"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:textColor="@color/text_color_title"
                    />
        </LinearLayout>

        <ImageView
                android:layout_marginLeft="36dp"
                android:layout_weight="0"
                android:id="@+id/download_down_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/download_down"
                android:layout_gravity="center_vertical"
                />
    </LinearLayout>


    <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/item_line"
            />

</LinearLayout>