<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingTop="11dp"
              android:paddingLeft="11dp"
              android:paddingRight="11dp">

    <RelativeLayout
            android:layout_width="156dp"
            android:layout_height="100dp">

        <ImageView
                android:id="@+id/iv_mycourse_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/default_224_140"
                android:scaleType="centerCrop"/>

        <TextView
                android:id="@+id/colledgeName"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/bg_course_panel_schoole"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="北京航空航天大学  "
                android:textColor="@color/txt_crouse_panel_schoole"
                android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white">

        <TextView
                android:id="@+id/courseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:singleLine="true"
                android:text="公开课"
                android:textColor="@color/white"
                android:background="@color/txt_crouse_panel_crouse"
                android:textSize="11sp"
                android:textStyle="bold|italic"/>
        <!--
                <TextView
                    android:id="@+id/tv_course_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:text="[公开课]"
                    android:textColor="#666666"
                    android:textSize="15sp" />-->

        <TextView
                android:id="@+id/courseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/courseType"
                android:lineSpacingExtra="3dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="6dp"
                android:text="互联网营销"
                android:textStyle="bold"
                android:textColor="#464646"
                android:maxLines="2"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/courseIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/courseName"
                android:layout_alignParentBottom="true"
                android:lineSpacingExtra="1dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="3dp"
                android:gravity="left|bottom"
                android:text="互联网营销"
                android:textColor="#999999"
                android:maxLines="2"
                android:visibility="gone"
                android:textSize="12sp"/>

        <!--<ImageView
            android:id="@+id/instructorImg"
            android:layout_width="32dp"
            android:layout_height="32dp"
