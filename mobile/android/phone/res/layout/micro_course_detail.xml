<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/course_bg_color"
        >
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

            <LinearLayout
                    android:id="@+id/micro_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                <include layout="@layout/activity_header"/>
            </LinearLayout>

            <ScrollView
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scrollbars="none"
                    >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                    <include layout="@layout/video_player"></include>
                    <LinearLayout
                            android:id="@+id/micro_body"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="6dp"
                                android:background="@color/white"
                                android:orientation="vertical"
                                >

                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                <View
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="3dp"
                                        android:layout_height="19dp"
                                        android:background="#ffb726"
                                        />

                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="微专业简介:"
                                        android:textSize="19dp"
                                        android:textColor="#45494c"
                                        android:layout_gravity="center_vertical|left"
                                        android:gravity="center_vertical|left"
                                        android:padding="10dp"
                                        />
                            </LinearLayout>
                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/micro_introduction"
                                    android:text="终上所述，应该出去玩了。。。"
                                    android:layout_gravity="center"
                                    android:gravity="center_vertical|left"
                                    android:textSize="14dp"
                                    android:lineSpacingExtra="10dp"
                                    />
                        </LinearLayout>

                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="10dp">
                            <TextView
                                    android:id="@+id/tv_micro_zhen"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="微专业证书"
                                    android:textSize="21dp"
                                    android:textColor="#45494c"
                                    android:gravity="center_vertical|left"
                                    android:layout_marginTop="18dp"
                                    android:layout_marginBottom="18dp"
                                    />
                            <LinearLayout
                                    android:layout_below="@id/tv_micro_zhen"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@color/white"
                                    android:padding="14dp"
                                    android:gravity="center"
                                    >
                                <ImageView
                                        android:id="@+id/micro_prize"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/certificate_default"
                                        />
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:orientation="vertical"
                                >
                            <TextView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:text="微专业课程"
                                    android:textSize="21dp"
                                    android:textColor="#45494c"
                                    android:gravity="center_vertical|left"
                                    android:layout_marginTop="18dp"
                                    android:layout_marginBottom="18dp"
                                    />

                            <com.kaikeba.common.widget.MyListVIew
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/micro_course_listview"
                                    android:cacheColorHint="#00000000"
                                    android:listSelector="@android:color/transparent"
                                    android:divider="@drawable/course_item_divider"
                                    >

                            </com.kaikeba.common.widget.MyListVIew>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/translate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#40000000"
                android:orientation="horizontal"
                android:layout_weight="100"
                android:visibility="gone"
                >
        </LinearLayout>
    </FrameLayout>
    <LinearLayout
            android:id="@+id/ll_join_in_micro"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="vertical"
            android:background="@drawable/settings_bg">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/join_mirco"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/join_in_micro"
                    android:layout_marginLeft="10dp"
                    android:text="加入该微专业"
                    android:textSize="19sp"
                    android:textColor="@color/standard_blue"
                    android:gravity="center"
                    />
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                <View
                        android:layout_width="match_parent"
                        android:background="#dbdbdb"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        />

                <com.kaikeba.common.widget.MyListVIew
                        android:id="@+id/micro_course_lv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                </com.kaikeba.common.widget.MyListVIew>
                <View
                        android:layout_width="match_parent"
                        android:background="#dbdbdb"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
