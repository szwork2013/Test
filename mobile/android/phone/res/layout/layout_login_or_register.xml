<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/login_or_register"
              android:orientation="vertical"
              android:gravity="bottom"
              android:layout_gravity="bottom"
              android:layout_width="match_parent"
              android:layout_height="55dp">
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/login_press"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/standard_blue"
            >
        <TextView
                android:id="@+id/common_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="登录"
                android:background="@color/standard_blue"
                android:textColor="@color/login_press_selector"
                android:textSize="19sp"
                />
        <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@color/login_press"/>
        <TextView
                android:id="@+id/common_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注册"
                android:background="@color/standard_blue"
                android:textColor="@color/login_press_selector"
                android:textSize="19sp"
                />
    </LinearLayout>


</LinearLayout>