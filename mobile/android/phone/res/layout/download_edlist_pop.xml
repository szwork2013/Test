<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >
    <View
            android:id="@+id/download_outside_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#00000000"
            />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="#f5f5f5">
    <RelativeLayout
            android:id="@+id/rel_go_download_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:text="视频下载"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                />
        <TextView
                android:id="@+id/download_video_total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:text="查看下载"
                android:layout_centerVertical="true"
                android:gravity="left|center_vertical"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:textColor="@color/text_selected_all"
                />
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/item_line"
            />


    <ExpandableListView
            android:layout_weight="1"
            android:id="@+id/load_expandableCourseInfo"
            android:groupIndicator="@null"
            android:choiceMode="singleChoice"
            android:scrollbars="vertical"
            android:childDivider="@android:color/transparent"
            android:divider="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:drawSelectorOnTop="false"
            android:scrollingCache="true"
            android:fastScrollEnabled="false"
            android:footerDividersEnabled="true"
            android:cacheColorHint="@android:color/transparent"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/item_line"
            />
    <LinearLayout
            android:layout_toEndOf="@id/load_expandableCourseInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/open_all_select"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/text_selected_all"
                android:text="全选"/>
        <View
                android:layout_width="0.8dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:background="@color/item_line"></View>
        <TextView
                android:id="@+id/open_down_load"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_width="0dp"
                android:textSize="18sp"
                android:textColor="@color/text_download_normal"
                android:text="下载"/>
    </LinearLayout>
   </LinearLayout>
</LinearLayout>