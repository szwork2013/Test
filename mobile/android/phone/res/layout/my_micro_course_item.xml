<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@drawable/settings_bg"
              android:paddingLeft="14dp"
              android:paddingRight="14dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <ImageView
                android:id="@+id/my_micro_course_status"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:src="@drawable/task_button_unfinished2_def"/>
        <TextView
                android:id="@+id/my_micro_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/my_micro_course_status"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="19dp"
                android:textColor="@color/text_color_no_willbegin"
                android:textSize="19sp"
                android:text="最终考核最终考核"/>

    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="#f0f0f0"
          android:id="@+id/my_micro_course_divider"
          android:layout_alignParentBottom="true"/>

</LinearLayout>