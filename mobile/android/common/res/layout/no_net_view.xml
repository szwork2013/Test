<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:paddingLeft="58dp"
            android:paddingRight="58dp"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:layout_marginBottom="17dp"
                android:textColor="#666666"
                android:textSize="17sp"
                android:text="@string/no_net_text"/>
        <!--<TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:textColor="#666666"
                  android:layout_marginTop="7dp"
                  android:layout_marginBottom="17dp"
                  android:textSize="17sp"
                  android:text="@string/no_net_text2"/>-->
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/go_set"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:textColor="#666666"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/no_net_text_bg"
                android:text="@string/to_set"/>
        <View android:layout_width="1dp"
              android:layout_height="23dp"
              android:layout_gravity="center_vertical"
              android:background="@color/less_light_gray"/>
        <TextView
                android:id="@+id/go_cancle"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:textColor="#666666"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/no_net_text_bg"
                android:text="@string/to_cancle"/>
    </LinearLayout>


</LinearLayout>