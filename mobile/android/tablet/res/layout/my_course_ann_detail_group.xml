<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="9dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

    <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/avatar_default"
            android:scaleType="fitXY"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_avatar"
            android:paddingBottom="10dp"
            android:background="@color/white">

        <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="小明"
                android:textColor="#297acc"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="14dp"
                android:text="情同学们查看新的作业要求，写错了要悲剧"
                android:textColor="#3d454c"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/posted_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/message"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="2013年7月5日"
                android:textColor="#666666"
                android:textSize="15sp"/>

        <TextView
                android:id="@+id/btn_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/posted_at"
                android:layout_marginRight="15dp"
                android:text="回复"
                android:textColor="#3d454c"
                android:textSize="14sp"/>

    </RelativeLayout>

</RelativeLayout>