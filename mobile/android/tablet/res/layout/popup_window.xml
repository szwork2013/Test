<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="188dp"
              android:layout_height="wrap_content"
              android:background="@drawable/popup_border"
              android:gravity="right"
              android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="170dp"
            android:layout_height="42dp">

        <ImageButton
                android:id="@+id/btnAddFromAlbum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_btn_popup"/>

        <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/from_album"
                android:textColor="@color/txt_popup_btn_title"
                android:textSize="@dimen/popup_btn_title"
                android:textStyle="bold"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="-7dp"
                android:layout_toLeftOf="@+id/textView1"
                android:src="@drawable/icon_album"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="42dp"
            android:layout_marginTop="2dp">

        <ImageButton
                android:id="@+id/btnAddFromCamera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_btn_popup"/>

        <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/from_camera"
                android:textColor="@color/txt_popup_btn_title"
                android:textSize="@dimen/popup_btn_title"
                android:textStyle="bold"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="-7dp"
                android:layout_toLeftOf="@+id/textView2"
                android:src="@drawable/icon_camera"/>

    </RelativeLayout>


</LinearLayout>