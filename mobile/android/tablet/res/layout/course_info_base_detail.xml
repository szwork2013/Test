<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingBottom="14dp"
                android:paddingTop="12dp"
                android:background="@color/white"
        >

    <TextView
            android:id="@+id/tv_course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="互联网营销概论"
            android:textColor="#1a6eaf"
            android:textSize="18sp"/>

    <TextView
            android:id="@+id/tv_course_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="公开课"
            android:textColor="#1a6eaf"
            android:textSize="18sp"/>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            android:layout_below="@id/tv_course_name"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="14dp"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:text="学校机构 :"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/tv_school_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/view"
            android:text="北京航空航天大学"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_school_name"
            android:layout_marginTop="14dp"
            android:text="讲师:"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/tv_instructor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_school_name"
            android:layout_marginTop="14dp"
            android:text="马建"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_instructor_name"
            android:layout_marginTop="14dp"
            android:text="开课时间:"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/tv_course_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_instructor_name"
            android:layout_marginTop="14dp"
            android:text="2013-12-28"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_course_time"
            android:layout_marginTop="14dp"
            android:text="时长预估:"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/tv_course_time_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_course_time"
            android:layout_marginTop="14dp"
            android:text="每天三小时"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_course_time_about"
            android:layout_marginTop="14dp"
            android:text="课程编号:"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/tv_course_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_course_time_about"
            android:layout_marginTop="14dp"
            android:text="北京航空航天大学"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            android:layout_below="@id/tv_course_number"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            />

    <TextView
            android:id="@+id/tv_course_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:text="课程关键字 :"
            android:textColor="#67747c"
            android:textSize="14sp"/>

    <TextView
            android:id="@+id/tv_course_key_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_course_key"
            android:layout_marginTop="14dp"
            android:text="课程关键字 课程关键字课程关键字课程关键字课程关键字课程关键字"
            android:textColor="#67747c"
            android:textSize="14sp"/>

</RelativeLayout>